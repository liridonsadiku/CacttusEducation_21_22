<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MultiLanguageActivity">

    <Button
        android:id="@+id/btnAlbanianLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Albanian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnEnglishLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAlbanianLanguage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEnglishLanguage"
        android:textSize="@dimen/text_size_30"
        android:layout_marginTop="@dimen/space_30"/>

</androidx.constraintlayout.widget.ConstraintLayout>